<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityVoice"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewLastQuery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonTextTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLastQueryRecognition" />

    <ImageButton
        android:id="@+id/imageButtonMicro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="79dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="7dp"
        android:contentDescription="TODO"
        android:src="@android:drawable/presence_audio_online"
        app:layout_constraintBottom_toTopOf="@+id/textViewCurrentVoiceRecognition"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonKeyboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTextTest" />

    <TextView
        android:id="@+id/textViewCurrentVoiceRecognition"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonKeyboard" />

    <TextView
        android:id="@+id/textViewLastQueryRecognition"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewLastQuery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="27dp"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toTopOf="@+id/textViewCurrentVoiceRecognition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonMicro"
        app:layout_constraintTop_toBottomOf="@+id/buttonTextTest" />

    <EditText
        android:id="@+id/editTextTextTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter a test query"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonMicro"
        app:layout_constraintEnd_toStartOf="@+id/buttonTextTest"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTextTest"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="16dp"
        android:text="Go"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonKeyboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextTextTest"
        app:layout_constraintTop_toBottomOf="@+id/cardViewLastQuery" />
</android.support.constraint.ConstraintLayout>